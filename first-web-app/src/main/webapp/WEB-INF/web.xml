<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

  <display-name>Archetype Created Web Application</display-name>

  <context-param>
    <param-name>jdbcConnectionString</param-name>
    <param-value>jdbc:mysql://localhost:3306/javaee_shop_db?createDatabaseIfNotExist=true&amp;serverTimezone=UTC&amp;useSSL=false&amp;allowPublicKeyRetrieval=true</param-value>
  </context-param>

  <context-param>
    <param-name>username</param-name>
    <param-value>root</param-value>
  </context-param>

  <context-param>
    <param-name>password</param-name>
    <param-value>my18Erasql20</param-value>
  </context-param>


  <servlet>
    <servlet-name>first-servlet</servlet-name>
    <servlet-class>ru.erasko.FirstServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>first-servlet</servlet-name>
    <url-pattern>/servlet</url-pattern>
  </servlet-mapping>
  
  <error-page>
    <error-code>404</error-code>
    <location>/exception4</location>
  </error-page>

  <error-page>
    <error-code>403</error-code>
    <location>/exception3</location>
  </error-page>
</web-app>